<Window x:Class="CustomUploader.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomUploader"
        mc:Ignorable="d"
        Title="Произошло исключение" Height="220" Width="380" MinWidth="380" MinHeight="220" x:ClassModifier="internal">
    <Grid>
        <Label Content="Программа будет закрыта. Информация для разработчиков:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBox" IsReadOnly="True" IsReadOnlyCaretVisible="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10,41,10,37"/>
        <Button Content="Скопировать всё и закрыть" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="160" Click="ButtonCopyAndClose_Click"/>
    </Grid>
</Window>
